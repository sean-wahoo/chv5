{
  "name": "functions",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "."
    ],
    "exec": "ts-node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js, json"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "api-test": "newman run chv5.postman_collection.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "express": "^4.17.1",
    "bluebird": "^3.7.2",
    "dotenv": "^10.0.0",
    "email-validator": "^2.0.4",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.2",
    "nanoid": "^3.1.30",
    "nodemon": "^2.0.14",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "private": true
}
